<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_purple_textview">

    <ImageView
        android:id="@+id/ivPlayerView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_corner_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvPlayerViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="Tech PodCast is Real"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivPlayerView"
        app:layout_constraintTop_toTopOf="@+id/ivPlayerView" />

    <TextView
        android:id="@+id/tvPlayerViewDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="The show is real"
        android:textColor="@color/TextColorTertary"
        app:layout_constraintEnd_toEndOf="@+id/tvPlayerViewTitle"
        app:layout_constraintStart_toStartOf="@+id/tvPlayerViewTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayerViewTitle" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:outlineSpotShadowColor="@color/colorProgressBar"
        android:progress="56"
        app:layout_constraintEnd_toStartOf="@+id/tvPlayerViewHoursLeft"
        app:layout_constraintStart_toStartOf="@+id/tvPlayerViewDesc"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayerViewDesc" />

    <TextView
        android:id="@+id/tvPlayerViewHoursLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="1hr left"
        android:textColor="@color/TextColorTertary"
        app:layout_constraintEnd_toEndOf="@+id/tvPlayerViewDesc"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayerViewDesc" />

    <TextView
        android:id="@+id/tvSpeedOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="x1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayerView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/ivPlayBackward"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvSpeedOne"
        app:layout_constraintEnd_toStartOf="@+id/ivPlay"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvSpeedOne"
        app:layout_constraintTop_toTopOf="@+id/tvSpeedOne"
        app:srcCompat="@drawable/ic_replay_10" />

    <ImageView
        android:id="@+id/ivPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlay"
        app:layout_constraintEnd_toStartOf="@+id/ivPlayForward"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPlay"
        app:layout_constraintTop_toTopOf="@+id/ivPlay"
        app:srcCompat="@drawable/ic_baseline_pause_circle_filled_24" />

    <ImageView
        android:id="@+id/ivPlayForward"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPause"
        app:layout_constraintEnd_toStartOf="@+id/tvPlayViewZz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPause"
        app:layout_constraintTop_toTopOf="@+id/ivPause"
        app:srcCompat="@drawable/ic_forward_30" />

    <TextView
        android:id="@+id/tvPlayViewZz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zz"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlayForward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPlayForward"
        app:layout_constraintTop_toTopOf="@+id/ivPlayForward" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_baseline_play_circle_filled_24"
        app:layout_constraintBottom_toBottomOf="@+id/ivPlayBackward"
        app:layout_constraintEnd_toStartOf="@+id/ivPause"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivPlayBackward"
        app:layout_constraintTop_toTopOf="@+id/ivPlayBackward" />

</androidx.constraintlayout.widget.ConstraintLayout>